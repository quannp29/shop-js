mixin search(keyword, placeholder = "Nhập từ khóa")
  form(id="form-search")
    .input-group
      input(
        type="text"
        placeholder=placeholder
        name="keyword"
        class="form-control"
        value=keyword
      )
      .input-group-append
        button(
          class="btn btn-success"
          type="submit"
        ) Tìm