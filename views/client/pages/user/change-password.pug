extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error()
  +alert-success()

  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Đổi mật khẩu
        form(
          action="/user/change-pass?_method=PATCH"
          method="POST"
          form-change-password
        )
          div(class="form-group")
            label(for="oldPassword") Mật khẩu cũ
            input(
              type="password"
              class="form-control"
              id="oldPassword"
              name="oldPassword"
              required
            )
          div(class="form-group")
            label(for="newPassword") Mật khẩu mới
            input(
              type="password"
              class="form-control"
              id="newPassword"
              name="newPassword"
              required
            )
          div(class="form-group")
            label(for="confirmPassword") Xác nhận mật khẩu
            input(
              type="password"
              class="form-control"
              id="confirmPassword"
              name="confirmPassword"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Đổi mật khẩu